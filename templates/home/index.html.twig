{% extends 'base.html.twig' %}

{% block body %}
    <div class="customBg d-flex align-items-center h-75">
        <div class="w-50 h-25 px-2">
            <img src="{{ asset('img/logo.png') }}">
        </div>

        <div class="w-50 h-25 px-2">
            <h1 class="text-center text-white">Les meilleurs recettes pour les meilleurs cuisiniers.<br/> Partagez vos
                recettes et profitez de celles du monde entier</h1>
        </div>
    </div>
    <section class="bg-light py-4 my-2">
        <h1 class="text-center">Les derni√®res recettes</h1>
        <div class="container">
            <div class="row">
                {% if Recipes is defined %}
                    {% for recipe in Recipes %}
                        <div class="col-md-6 col-lg-4">
                            <div class="card my-3 shadow">
                                <div class="card-thumbnail">
                                    {% set filePath = asset('/uploads/recipe_img/' ~ recipe.ImgLink) %}
                                    <img src="{{ filePath }}" alt="{{ recipe.title }}"
                                         style="object-fit: cover; width: 100%; height: 400px;">
                                </div>
                                <div class="card-body">
                                    <h3 class="card-title"><a href="/recipe/{{ recipe.id }}"
                                                              class="text-secondary">{{ recipe.title }}</a></h3>
                                    <p class="card-text">{{ recipe.description }}</p>
                                    <a href="/recipe/{{ recipe.id }}" class="btn btn-danger">Voir la recette</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
            {% if PageName == 'Recettes' %}
                {{ knp_pagination_render(Recipes) }}
            {% endif %}
        </div>
    </section>
{% endblock %}
