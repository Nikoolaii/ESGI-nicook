<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Nicook | {{ PageName }}{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
        {{ ux_controller_link_tags() }}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
              crossorigin="anonymous">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet"
              type="text/css">
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
                crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"
                integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
        <script>
            $(document).ready(function () {
                $('.navbar-toggler').on('click', function () {
                    alert('ok');
                    $('.navbar-collapse').toggleClass('show');
                    $('.navbar-toggler').toggleClass('collapsed');
                });
            });

        </script>
    {% endblock %}
</head>
<body>
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col">
                <a class="navbar-brand" href="/">Nicook <span>Recipes</span></a>
            </div>
            <div class="col d-flex justify-content-end">
                <div class="social-media">
                    <p class="mb-0 d-flex">
                        {% if app.user %}
                            <a href="/account"
                               class="d-flex align-items-center justify-content-center"><span
                                        class="fa-solid fa-user"><i class="sr-only">Mon compte</i></span></a>
                            <a href="/logout"
                               class="d-flex align-items-center justify-content-center"><span
                                        class="fa-solid fa-right-from-bracket"><i
                                            class="sr-only">Déconnexion</i></span></a>
                        {% else %}
                            <a href="/login" class="d-flex align-items-center justify-content-center"><span
                                        class="fa-solid fa-right-to-bracket"><i
                                            class="sr-only">Connexion</i></span></a>
                            <a href="/register" class="d-flex align-items-center justify-content-center"
                               style="width: auto; border-radius: 15px;"><span>S'inscrire</span></a>
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav"
                    aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="fa fa-bars"></span> Menu
            </button>
            <form action="/search" class="searchform order-lg-last" method="get">
                <div class="form-group d-flex">
                    <input type="text" class="form-control pl-3" placeholder="Search" name="query">
                    <button type="submit" placeholder="" class="form-control search"><span class="fa fa-search"></span>
                    </button>
                </div>
            </form>
            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item {% if PageName == 'Accueil' %} active {% endif %}"><a href="/" class="nav-link">Accueil</a>
                    </li>
                    <li class="nav-item {% if PageName == 'Recettes' %} active {% endif %} "><a href="/recipes"
                                                                                                class="nav-link">Recettes</a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item  {% if PageName == 'Ajouter une recette' %} active {% endif %}"><a
                                    href="/create"
                                    class="nav-link">Ajouter une recette</a></li>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    <!-- END nav -->
</section>
{% block body %}{% endblock %}

<!-- Footer -->
<footer class="bg-white">
    <!-- Copyrights -->
    <div class="bg-dark py-4">
        <div class="container text-center">
            <p class="text-muted mb-0 py-2 text-light">© 2024 Nikolaï LEMERRE All rights reserved.</p>
        </div>
    </div>
</footer>
<!-- End -->
</body>
</html>
